<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodHistory">

    <TextView
        android:id="@+id/history_text_view_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/seven_days_ago"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        tools:background="@color/banana_yellow" />

    <ImageView
        tools:visibility="visible"
        android:id="@+id/history_img_comment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_comment_black_48px"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/history_text_view_1"
        app:layout_constraintEnd_toEndOf="@id/history_text_view_1"
        app:layout_constraintTop_toTopOf="@id/history_text_view_1" />

    <TextView
        android:id="@+id/history_text_view_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
