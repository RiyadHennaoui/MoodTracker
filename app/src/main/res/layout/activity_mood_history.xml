        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history_text_view_1"
        app:layout_constraintWidth_percent="0.6"
        tools:background="@color/light_sage" />

    <ImageView
        tools:visibility="visible"
        android:id="@+id/history_img_comment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_comment_black_48px"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/history_text_view_2"
        app:layout_constraintEnd_toEndOf="@id/history_text_view_2"
        app:layout_constraintTop_toTopOf="@id/history_text_view_2"

        />

    <TextView
        android:id="@+id/history_text_view_3"
